@page "/"
@namespace SkillHub.App.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using SkillHub.App
@using Microsoft.AspNetCore.Components.Web
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="fi" data-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SkillHub</title>

    <base href="~/" />
    <link rel="icon" type="image/png" href="favicon.png" />

    <!-- Global CSS -->
    <link rel="stylesheet" href="~/css/main.css" />

    <!-- HeadOutlet mahdollistaa komponenttien omat <head>-lisäykset -->
</head>
<body>
    <!-- Blazor App start -->
    <component type="typeof(SkillHub.App.Components.App)" render-mode="ServerPrerendered" />

    <!-- Framework JS -->
    <script src="_framework/blazor.server.js"></script>

    <!-- Custom JS (theme + nav logic) -->
    <script src="~/js/site.js"></script>
</body>
</html>
